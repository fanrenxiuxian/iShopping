<% if flash.any? %>
  <% user_facing_flashes.each do |key, value| %>
    <div class="alert alert-<%= flash_class(key) %> alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong><%= value %></strong>
    </div>
  <% end %>
<% end %>
