<div class="container">
  <div class="row">
    <%= link_to "添加新商品", new_admin_product_path, class:"btn btn-primary pull-right" %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>编号</th>
          <th>标题</th>
          <th>描述</th>
          <th>价格</th>
          <th>库存</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each_with_index do |p, index| %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= link_to p.title,'#' %></td>
            <td><%= p.description %></td>
            <td><%= p.price %></td>
            <td><%= p.repertory %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
