<div class="container">
  <div class="row">
    <%= link_to "添加新商品", new_admin_product_path, class:"btn btn-primary pull-right" %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>编号</th>
          <th>商品图片</th>
          <th>标题</th>
          <th>描述</th>
          <th>价格</th>
          <th>库存</th>
          <th colspan="3">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each_with_index do |p, index| %>
          <tr>
            <td><%= index+1 %></td>

            <td>
              <% if p.avatar.present? %>
              <%= image_tag p.avatar.thumb.url %>
              <% else %>
              <span class="text-warning">暂无图片</span>
              <% end %>
            </td>
            <td><%= link_to p.title, admin_product_path(p) %></td>
            <td><%= p.description %></td>
            <td><%= p.price %></td>
            <td><%= p.repertory %></td>
            <td><%= link_to "上架", '#'%></td>
            <td><%= link_to "编辑", edit_admin_product_path(p) %></td>
            <td><%= link_to "删除", admin_product_path(p), method: :delete, data:{confirm: "确定要删除吗？"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
