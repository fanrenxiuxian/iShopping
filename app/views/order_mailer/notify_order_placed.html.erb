<div class="container">
  <div class="row">
    <h2>订单明细<br>
      <small>
        <%= link_to "订单明细", order_url(@order.token) %>
      </small>
    </h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="70%">商品明细</th>
          <th>单价</th>
          <th>数量</th>
          <th>小计</th>
        </tr>
      </thead>
      <tbody>
        <% @product_lists.each do |product_list| %>
        <tr>
          <td><%= image_tag product_list.picture %></td>
          <td><%= product_list.product_name %></td>
          <td><%= product_list.product_price %></td>
          <td><%= product_list.product_quantity %></td>
          <td><%= product_list.product_quantity * product_list.product_price %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
